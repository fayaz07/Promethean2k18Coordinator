<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentStatistics"
    tools:context=".General.PrometheanStatistics">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Promethean 2k18 Statistics"
            android:textSize="24dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="1dp"
            android:background="#9e9e9e" />

        <TextView
            android:id="@+id/appdownloads"
            android:text="App Installs: "
            android:textSize="18dp"
            android:textColor="#000"
            android:gravity="start"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="1dp"
            android:background="#9e9e9e" />

        <TextView
            android:id="@+id/deptEventRegns"
            android:text="Departmental Event Registrations: "
            android:textSize="18dp"
            android:textColor="#000"
            android:gravity="start"
            android:fontFamily="serif"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="1dp"
            android:background="#9e9e9e" />

        <TextView
            android:id="@+id/specialEventRegns"
            android:text="Special Event Registrations: "
            android:textSize="18dp"
            android:textColor="#000"
            android:gravity="start"
            android:fontFamily="serif"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="1dp"
            android:background="#9e9e9e" />

        <TextView
            android:id="@+id/totalRegns"
            android:text="Total Registrations: "
            android:textSize="18dp"
            android:textColor="#000"
            android:gravity="start"
            android:fontFamily="serif"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="1dp"
            android:background="#9e9e9e" />

        <TextView
            android:id="@+id/paymentsdone"
            android:text="Payments: "
            android:textSize="18dp"
            android:textColor="#000"
            android:gravity="start"
            android:fontFamily="serif"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="1dp"
            android:background="#9e9e9e" />

        <TextView
            android:id="@+id/amountthroughapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="serif"
            android:gravity="start"
            android:text="Total amount through payments: "
            android:textColor="#000"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="1dp"
            android:background="#9e9e9e" />

    </LinearLayout>
</ScrollView>